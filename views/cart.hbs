<h1>Your Cart</h1>
{{#if cart}}
    <ul>
        {{#each cart.items}}
            <li>
                <img src="{{this.product.imageUrl}}" alt="{{this.product.name}}" width="50">
                {{this.product.name}} - {{this.quantity}} x {{this.product.price}} USD
                <form action="/cart/remove/{{this.product._id}}" method="POST" style="display:inline;">
                    <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                    <button type="submit">Remove</button>
                </form>
            </li>
        {{/each}}
    </ul>
    <form action="/orders/place" method="POST">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button type="submit">Place Order</button>
    </form>
{{else}}
    <p>Your cart is empty.</p>
{{/if}}